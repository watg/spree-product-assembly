<script type="text/javascript">
  function displayRow(){
    var row = document.getElementById("captionRow");
    if (row.style.display == '') row.style.display = 'none';
    else row.style.display = '';
  }
</script>
<h4><%= t('available_parts') %></h4>
<table class="index">
	<thead>
		<tr>
  		<th><%= t("part") %></th>
  		<th><%= t("combination") %></th>
      <th><%= t("qty") %></th>
      <% if @item.can_have_optional_parts? %>
        <th><%= t("optional") %></th>
      <% end %>
  		<th></th>
		</tr>
	</thead>
	<tbody>
    <% @available_products.each do |product| %>
      <tr id="<%= dom_id(product) %>">
        
        <td><%= product.name %></td>
        <td>
          <% if product.has_variants? %>
            <%= select_tag "part[id]", 
                options_for_select(product.variants.map { |v| [variant_options(v), v.id] }) %>
          <% else %>
            <%= hidden_field_tag "part[id]", product.master.id %>
            <%= t :no_variants %>
          <% end %>
        </td>
        <td><%= text_field_tag "part[count]", 1 %></td>
        <% if @item.can_have_optional_parts? %>
          <td><%= check_box_tag( "part[optional]", false ) %></td>
        <% end %>
		    <td class="actions">
          <%= image_tag "spinner.gif", :style => "display:none", :class => "spinner" %>
		      <%= link_to(icon('add') + ' ' + t('select'), 
		                  admin_item_parts_path(@item),
		                  :class => "add_item_part_link") %>
		    </td>           
      </tr>
    <% end %>
    <% if @available_products.empty? %>
     <tr><td colspan="3"><%= t('no_match_found') %>.</td></tr>
    <% end %>
  </tbody>
</table>

<%= javascript_tag do %>
  $("a.add_item_part_link").click(function(){
    part_id_val = $('select option:selected', $(this).parent().parent()).val() ||
                  $('input:first', $(this).parent().parent()).val();
    params = {   
               part_count :  $('input:first', $(this).parent().parent()).val(),
               part_optional : $('input:last:checked', $(this).parent().parent()).length > 0 ? 'true' : 'false',
               part_id : part_id_val};
    return make_post_request($(this), params);
  });  
<% end %>  
